# Força a instalação mesmo com incompatibilidade de arquitetura
arch=x64
platform=linux
# Desativar módulos nativos do Rollup para melhor compatibilidade
rollup-plugin-node-polyfills=false
node-addon-api=false

legacy-peer-deps=true
engine-strict=false
no-optional=true
strict-ssl=false
registry=https://registry.npmjs.org/